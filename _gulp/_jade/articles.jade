doctype

html(lang="ru")
  
  -var active = 'Список статей' //активный пункт меню, список в header.jade
  -var pageTitle = 'Статьи' + ' - Клиника наркологии и психиатрии' //title страницы для генерации верстки  

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    // Header
    header.header.header--all
      include ./_include/_header
    
    // Content
    .content
      .container
        
        .row
          .col-sm-3
            include ./_include/_left
            
          .col-sm-9
            h1 полезная информация
            
            // Article
            .article
              
              - for (var i = 1; i < 4; i++) {
                .article__row
                  div.hidden-xs
                    .article__img
                      a(href="#!")
                      img(src="./tmp/articles/img-articles-" +i+ ".png", alt="").img-responsive
                      .article__date 20.12.2016
                      
                  div
                    a(href="#!").article__title Далеко-далеко за словесными горами в стране гласных и согласных живут рыбные тексты.
                    p Вдали от всех живут они в буквенных домах на берегу Семантика большого языкового океана. Маленький ручеек Даль журчит по всей стране и обеспечивает ее всеми необходимыми правилами. Эта парадигматическая страна, в которой жаренные предложения залетают прямо в рот. Даже всемогущая пунктуация не имеет власти над рыбными текстами, ведущими безорфографичный образ жизни. 
              - }
              
            .text-center
              a(href="#!").btn.btn--blue.btn--more
                i.ion-refresh
                | Загрузить еще
    
    include ./_include/_footer
    //- div(style="height: 500px; background-color: #000")
      
    include ./_include/_footer-js
    include ./_include/_js-body-bottom
